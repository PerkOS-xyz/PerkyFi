# PerkyFi Frontend Environment Variables
# Copy to .env.local and fill in values

# =============================================================================
# Firebase Client (public)
# =============================================================================
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=

# =============================================================================
# Firebase Admin (server-side) - Option 1: Full JSON string
# =============================================================================
FIREBASE_SERVICE_ACCOUNT=

# =============================================================================
# Firebase Admin (server-side) - Option 2: Individual vars
# =============================================================================
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=

# =============================================================================
# OnchainKit (Coinbase Developer Platform)
# Get from: https://portal.cdp.coinbase.com/
# =============================================================================
NEXT_PUBLIC_ONCHAINKIT_API_KEY=

# =============================================================================
# WalletConnect
# Get from: https://cloud.walletconnect.com/
# =============================================================================
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=

# =============================================================================
# x402 Payment Configuration
# =============================================================================
X402_RECIPIENT_ADDRESS=0x...
X402_PRICE_USDC=0.10
X402_FACILITATOR_URL=https://x402.org/facilitator

# =============================================================================
# Base Network
# =============================================================================
NEXT_PUBLIC_CHAIN_ID=8453
NEXT_PUBLIC_BASE_RPC_URL=https://mainnet.base.org

# =============================================================================
# App Configuration
# =============================================================================
NEXT_PUBLIC_BASE_URL=https://perkyfi.xyz

# =============================================================================
# Agent API Key (for POST /api/signals)
# =============================================================================
AGENT_API_KEY=

# =============================================================================
# Admin Encryption (REQUIRED)
# Generate with: openssl rand -hex 32
# =============================================================================
MASTER_KEY=change-me-to-random-32-byte-hex
